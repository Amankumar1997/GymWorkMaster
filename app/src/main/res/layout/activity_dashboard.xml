<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/topPanel">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDashboard"
                    android:text="Dashboard"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="70dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="30sp">

                </TextView>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textViewAbs"
                        android:textStyle="bold"
                        android:text="Abs"
                        android:layout_marginTop="60dp">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/absButton"
                            android:layout_gravity="center"
                            android:text="Abs"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/abss"
                            >
                        </ImageView>
                    </androidx.cardview.widget.CardView>>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textViewBack"
                        android:textStyle="bold"
                        android:text="Back"
                        android:layout_marginTop="10dp">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:id="@+id/backButton"
                            android:text="Back"
                            android:src="@drawable/backk"
                            >
                        </ImageView></androidx.cardview.widget.CardView>>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textViewBiceps"
                        android:textStyle="bold"
                        android:text="Biceps"
                        android:layout_marginTop="10dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/bicepsButton"
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:src="@drawable/biceps"
                            android:text="Biceps"></ImageView>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textViewCalf"
                        android:textStyle="bold"
                        android:text="Calf"
                        android:layout_marginTop="10dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/calfButton"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/calf"
                            android:text="Calf"
                            >
                        </ImageView>
                    </androidx.cardview.widget.CardView>>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textViewChest"
                        android:textStyle="bold"
                        android:text="Chest"
                        android:layout_marginTop="10dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/chestButton"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Chest"
                            android:src="@drawable/chest"
                            >
                        </ImageView>
                    </androidx.cardview.widget.CardView>>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textviewForearms"
                        android:textStyle="bold"
                        android:text="Forearms"

                        android:layout_marginTop="10dp">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/forearmsButton"
                            android:layout_gravity="center"
                            android:text="Forearms"
                            android:src="@drawable/forearms"
                            android:layout_marginTop="10dp">
                        </ImageView>
                    </androidx.cardview.widget.CardView>>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textviewLegs"
                        android:textStyle="bold"
                        android:text="Legs"

                        android:layout_marginTop="10dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:id="@+id/legsButton"
                        android:layout_gravity="center"
                        android:text="Legs"
                        android:src="@drawable/leg"
                        android:layout_marginTop="10dp"
                        >
                    </ImageView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textviewShoulder"
                        android:textStyle="bold"
                        android:text="Shoulders"
                        android:layout_marginTop="10dp">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/shoulderButton"
                            android:layout_gravity="center"
                            android:text="Shoulders"

                            android:src="@drawable/shoulder"
                            android:layout_marginTop="10dp"
                            >
                        </ImageView>
                    </androidx.cardview.widget.CardView>>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textviewTriceps"
                        android:textStyle="bold"
                        android:text="Triceps"
                        android:layout_marginTop="10dp">

                    </TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="150dp"
                            android:id="@+id/tricepsButton"
                            android:layout_gravity="center"
                            android:text="Triceps"
                            android:src="@drawable/triceps"
                            android:layout_marginTop="10dp"
                            >
                        </ImageView>
                    </androidx.cardview.widget.CardView>>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        android:id="@+id/textviewCardio"
                        android:textStyle="bold"
                        android:text="Cardio"
                        android:layout_marginTop="10dp">

                    </TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="20dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:id="@+id/cardioButton"
                        android:layout_gravity="center"
                        android:text="Cardio"

                        android:src="@drawable/cardios"
                        android:layout_marginTop="10dp"
                        >
                    </ImageView>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >




        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:id="@+id/toolbar"
            app:title="Gym workout"
            ></androidx.appcompat.widget.Toolbar>
    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/navigationnavheader"
        app:menu="@menu/menufille"
        android:layout_gravity="start"
        ></com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>