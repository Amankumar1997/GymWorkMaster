<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbsActivity">





   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewtinclinbenchsitups"
            android:textStyle="bold"
            android:text="Incline Bench Sit Ups"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewinclinebenchsitups"
                android:layout_gravity="center"
                android:text="Cardio"
                android:src="@drawable/inclinebenchsitups"
                android:layout_marginTop="10dp"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewhanginglegraises"
            android:textStyle="bold"
            android:text="Hangin Leg Raises"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewhanginglegaises"
                android:layout_gravity="center"
                android:text="Cardio"

                android:src="@drawable/hanginlgraises"
                android:layout_marginTop="10dp"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewdumbbellsidebends"
            android:textStyle="bold"
            android:text="Dumbbell Side Bends"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewdumbbellsidebends"
                android:layout_gravity="center"
                android:src="@drawable/dumbbellsidbends"
                android:layout_marginTop="10dp"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewcrunches"
            android:textStyle="bold"
            android:text="Crunches"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewCrunches"
                android:layout_gravity="center"
                android:src="@drawable/crunchess"
                android:layout_marginTop="10dp"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>
   <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewsitups"
            android:textStyle="bold"
            android:text="Sit Ups"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewsitups"
                android:layout_gravity="center"
                android:src="@drawable/situpss"
                android:layout_marginTop="10dp"
                >
            </ImageView>

        </androidx.cardview.widget.CardView>>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:id="@+id/textviewlegraises"
            android:textStyle="bold"
            android:text="Leg Raises"
            android:layout_marginTop="10dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:id="@+id/imageviewslegraises"
                android:layout_gravity="center"
                android:src="@drawable/legraisess"
                android:layout_marginTop="10dp"
                >
            </ImageView>
        </androidx.cardview.widget.CardView>




    </LinearLayout>

   </ScrollView>
</RelativeLayout>